generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}

enum Role {
  ADMIN
  SUPER_ADMIN
  USER
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  orders   Order[]
  products Product[]
  role     Role    @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Product {
  id    String @id @default(uuid())
  name  String @unique
  stock Int
  price Float
  
  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  orders  OrderItem[]

  @@map("products")
}

model Order {
  id            String      @id @default(uuid())
  status        OrderStatus @default(PENDING)
  totalPrice    Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  items     OrderItem[]
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@map("orders")
}

model OrderItem {
  id            String      @id @default(uuid())
  quantity      Int
  price         Float

  order         Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId       String

  product       Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId     String

  @@unique([productId, orderId])
  @@map("order_items")
}